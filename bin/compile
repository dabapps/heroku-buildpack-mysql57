#!/bin/bash
mkdir -p "$1" "$2"

build_dir=$1

cd /tmp

wget "https://cdn.mysql.com/archives/mysql-5.7/mysql-5.7.41-linux-glibc2.12-x86_64.tar.gz"
tar -xf mysql-5.7.41-linux-glibc2.12-x86_64

mv mysql-5.7.41-linux-glibc2.12-x86_64 /opt/mysql57

mkdir -p $build/.profile.d

echo 'PATH=$PATH:/opt/mysql57/bin' > $build/.profile.d/mysql57.sh
